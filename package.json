{
  "name": "scancode-workbench",
  "productName": "scancode-workbench",
  "version": "4.0.0",
  "description": "An application for viewing ScanCode results and concluding component origin and license",
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "nexB",
  "keywords": [
    "ScanCode",
    "scan codebase",
    "open source scanning",
    "open source scanner"
  ],
  "license": "Apache-2.0",
  "bugs": {},
  "homepage": "",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-forge package && node packager.js && npm run create-archive",
    "create-archive": "python archive_builder.py",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
