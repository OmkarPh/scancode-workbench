    "chart.js": "^4.4.0",
    "diff-match-patch": "^1.0.5",
    "electron-squirrel-startup": "^1.0.0",
    "file-loader": "^6.2.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.7.1",
    "JSONStream": "^1.3.5",
    "mock-aws-s3": "^4.0.2",
    "moment": "^2.29.4",
    "nock": "^13.3.7",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "rc-tree": "^5.8.2",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-loader-spinner": "^5.4.5",
    "react-pro-sidebar": "0.7.1",
